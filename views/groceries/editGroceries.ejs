<h1>Edit Grocery Item</h1>
<form action="/groceries/<%= index %>/?_method=PUT" method="POST">
  <label for="name">NAME</label>
  <input type="text" name="name" id="name" value="<%= groceryItem.name %>" />
  <label for="price">PRICE</label>
  <input type="text" name="price" id="price" value="<%= groceryItem.price %>" />
  <label for="preferredStore">PREFERRED STORE</label>
  <input type="text" name="preferredStore" id="preferredStore" value="<%= groceryItem.preferredStore %>" />
  <input type="submit" value="Edit Grocery List Item" />
</form>

