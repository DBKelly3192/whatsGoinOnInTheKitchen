<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs') %>

<h1>Edit Grocery Item</h1>
<form action="/groceries/<%= groceryItem.id %>/?_method=PUT" method="POST">

  <label for="item">ITEM</label>
  <input type="text" name="item" id="item" value="<%= groceryItem.item %>" />

  <label for="brand">BRAND</label>
  <input type="text" name="brand" id="brand" value="<%= groceryItem.brand %>" />

  <label for="price">PRICE</label>
  <input type="text" name="price" id="price" value="<%= groceryItem.price %>" />

  <label for="preferredStore">PREFERRED STORE</label>
  <select name="preferredStore" id="preferredStore">
      <option value="No Preference">No Preference</option>
      <option value="Aldi's">Aldi's</option>
      <option value="Costco">Costco</option>
      <option value="Safeway">Safeway</option>
      <option value="Shoppers">Shoppers</option>
      <option value="Trader Joe's">Trader Joe's</option>
      <option value="Whole Foods">Whole Foods</option>
  </select>

  <input type="submit" value="Edit Grocery List Item" />

</form>

<form action="/groceries/<%= groceryItem.id %>?_method=DELETE" method="POST">
  <input type="submit" value="Delete Item" />
</form>

