<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs') %>

    <h1>Groceries List</h1>
    <% for (let i = 0; i < groceries.length; i++) { %>
      <ul>
        <li><a href="/groceries/<%= groceries[i].id %>/edit"><%= groceries[i].name %></a></li>
        <li><%= groceries[i].price %></li>
        <li><%= groceries[i].preferredStore %></li>
      </ul>
      <form action="/groceries/<%= groceries[i].id %>?_method=DELETE" method="POST">
        <input type="submit" value="DELETE" />
      </form>
    <% } %>

    <nav>
      <a href="/groceries/new">Create New Grocery List Item</a>
    </nav>

